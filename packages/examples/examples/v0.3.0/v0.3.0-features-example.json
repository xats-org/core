                  "promptType": "learning-strategy",
                  "prompt": {
                    "runs": [
                      {
                        "type": "text",
                        "text": "Before beginning the next case study, plan your approach to analyzing complex business scenarios."
                      }
                    ]
                  },
                  "guidingQuestions": [
                    {
                      "question": {
                        "runs": [
                          {
                            "type": "text",
                            "text": "What frameworks or models will you use to structure your analysis?"
                          }
                        ]
                      },
                      "purpose": "Activate prior knowledge"
                    },
                    {
                      "question": {
                        "runs": [
                          {
                            "type": "text",
