            "content": [
              {
                "id": "intro-paragraph",
                "language": "en",
                "blockType": "https://xats.org/vocabularies/blocks/paragraph",
                "content": {
                  "text": {
                    "runs": [
                      {"type": "text", "text": "A quadratic function is a polynomial function of degree 2, typically written in the form "},
                      {"type": "strong", "text": "f(x) = ax² + bx + c"},
                      {"type": "text", "text": " where a ≠ 0."}
                    ]
                  }
                }
              },
              {
                "id": "quadratic-equation",
                "language": "en",
                "blockType": "https://xats.org/vocabularies/blocks/mathBlock",
                "content": {
                  "notation": "latex",
                  "expression": "f(x) = ax^2 + bx + c",
                  "altText": "f of x equals a x squared plus b x plus c",
                  "speechText": "Function f of x equals a times x squared plus b times x plus c"
                }
              },
              {
                "id": "graph-figure",
                "language": "en",
                "blockType": "https://xats.org/vocabularies/blocks/figure",
                "content": {
