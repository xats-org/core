{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://xats.org/vocabularies/pathways/remedial",
  "title": "Remedial Learning Pathway", 
  "description": "Additional support pathway for learners who need reinforcement",
  "type": "object",
  "properties": {
    "pathwayType": {
      "const": "https://xats.org/vocabularies/pathways/remedial",
      "description": "URI identifier for remedial pathway type"
    },
    "description": {
      "type": "string",
      "description": "Description of this pathway",
      "default": "Additional practice and reinforcement for struggling learners"
    },
    "prerequisiteTopics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Topics that should be reviewed first"
    },
    "estimatedDuration": {
      "type": "integer",
      "description": "Estimated time in minutes",
      "minimum": 1
    }
  },
  "required": ["pathwayType"],
  "examples": [
    {
      "pathwayType": "https://xats.org/vocabularies/pathways/remedial",
      "description": "Review basic concepts before proceeding",
      "prerequisiteTopics": ["algebra basics", "graphing linear equations"],
      "estimatedDuration": 60
    }
  ]
}