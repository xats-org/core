{
  "name": "@xats/schema",
  "version": "0.4.0",
  "description": "JSON Schema definitions for the Extensible Academic Textbook Schema",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "keywords": [
    "xats",
    "schema",
    "json-schema",
    "education",
    "textbook"
  ],
  "author": "xats.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xats-org/core.git",
    "directory": "packages/schema"
  },
  "bugs": {
    "url": "https://github.com/xats-org/core/issues"
  },
  "homepage": "https://xats.org",
  "dependencies": {
    "@xats/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@xats/vitest-config": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@xats/types": "workspace:*"
  },
  "files": [
    "dist/",
    "schemas/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}