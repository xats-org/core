                "blockType": "https://xats.org/vocabularies/blocks/paragraph",
                "content": {
                  "text": {
                    "runs": [
                      {"type": "text", "text": "Machine learning is a subset of artificial intelligence (AI) that enables computers to learn and make decisions from data without being explicitly programmed for every possible scenario."}
                    ]
                  }
                },
                "annotations": [
                  {
                    "id": "annotation-001",
                    "language": "en",
                    "annotationType": "https://xats.org/vocabularies/annotations/clarification_request",
