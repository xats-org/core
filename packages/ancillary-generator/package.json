{
  "name": "@xats-org/ancillary-generator",
  "version": "0.5.0",
  "description": "Automated ancillary material generation for xats documents",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --clean --sourcemap",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --sourcemap",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "keywords": [
    "xats",
    "ancillary",
    "study-guide",
    "slides",
    "test-bank",
    "educational"
  ],
  "author": "xats.org",
  "license": "MIT",
  "dependencies": {
    "@xats-org/types": "workspace:*",
    "@xats-org/validator": "workspace:*",
    "@xats-org/vocabularies": "workspace:*",
    "@xats-org/converter-word": "workspace:*",
    "@xats-org/converter-latex": "workspace:*",
    "mustache": "^4.2.0",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}