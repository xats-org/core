{
  "name": "@xats/utils",
  "version": "0.4.1",
  "description": "Utility functions for the xats ecosystem",
  "keywords": [
    "xats",
    "educational",
    "textbook",
    "utilities",
    "helpers"
  ],
  "homepage": "https://xats.org",
  "bugs": {
    "url": "https://github.com/xats-org/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xats-org/core.git",
    "directory": "packages/utils"
  },
  "license": "CC-BY-SA-4.0",
  "author": "xats Contributors",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./json": {
      "types": "./dist/json.d.ts",
      "import": "./dist/json.js"
    },
    "./uri": {
      "types": "./dist/uri.d.ts",
      "import": "./dist/uri.js"
    },
    "./text": {
      "types": "./dist/text.d.ts",
      "import": "./dist/text.js"
    },
    "./path": {
      "types": "./dist/path.d.ts",
      "import": "./dist/path.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xats/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "@xats/eslint-config": "workspace:*",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}