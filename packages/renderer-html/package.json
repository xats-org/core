    "jsdom": "^23.0.0"
  },
  "devDependencies": {
    "@types/axe-core": "^3.0.6",
    "@types/dompurify": "^3.0.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@xats-org/eslint-config": "workspace:*",
    "axe-core": "^4.10.3",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
