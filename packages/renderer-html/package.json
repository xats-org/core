{
  "name": "@xats-org/renderer-html",
  "version": "0.5.0",
  "description": "HTML5 bidirectional renderer for xats documents with WCAG 2.1 AA compliance",
  "keywords": [
    "xats",
    "renderer",
    "html",
    "html5",
    "accessibility",
    "wcag",
    "bidirectional"
  ],
  "homepage": "https://xats.org",
  "bugs": {
    "url": "https://github.com/xats-org/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xats-org/core.git",
    "directory": "packages/renderer-html"
  },
  "license": "CC-BY-SA-4.0",
  "author": "xats Contributors",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsc --watch",
