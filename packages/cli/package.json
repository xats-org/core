{
  "name": "@xats/cli",
  "version": "0.4.0",
  "description": "Command-line interface for xats document validation and processing",
  "keywords": [
    "xats",
    "cli",
    "validation",
    "educational",
    "textbook"
  ],
  "homepage": "https://xats.org",
  "bugs": {
    "url": "https://github.com/xats-org/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xats-org/core.git",
    "directory": "packages/cli"
  },
  "license": "CC-BY-SA-4.0",
  "author": "xats Contributors",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "xats": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json && chmod +x dist/cli.js",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsc --build tsconfig.build.json --watch",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.build.json"
  },
  "dependencies": {
    "@xats/schema": "workspace:*",
    "@xats/types": "workspace:*",
    "@xats/utils": "workspace:*",
    "@xats/validator": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "@xats/eslint-config": "workspace:*",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}