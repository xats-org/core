{
  "name": "@xats-org/renderer",
  "version": "0.5.0",
  "description": "Rendering engine for xats documents to various output formats",
  "keywords": [
    "xats",
    "renderer",
    "html",
    "markdown",
    "educational"
  ],
  "homepage": "https://xats.org",
  "bugs": {
    "url": "https://github.com/xats-org/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xats-org/core.git",
    "directory": "packages/renderer"
  },
  "license": "CC-BY-SA-4.0",
  "author": "xats Contributors",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./html": {
      "types": "./dist/renderers/html.d.ts",
      "import": "./dist/renderers/html.js"
    },
    "./markdown": {
      "types": "./dist/renderers/markdown.d.ts",
      "import": "./dist/renderers/markdown.js"
    },
    "./text": {
      "types": "./dist/renderers/text.d.ts",
      "import": "./dist/renderers/text.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xats-org/testing": "workspace:*",
    "@xats-org/types": "workspace:*",
    "@xats-org/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@xats-org/eslint-config": "workspace:*",
    "dompurify": "^3.2.6",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}