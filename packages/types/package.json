{
  "name": "@xats-org/types",
  "version": "0.4.1",
  "description": "Shared TypeScript types for xats",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./document": {
      "types": "./dist/document.d.ts",
      "import": "./dist/document.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    },
    "./rendering": {
      "types": "./dist/rendering.d.ts",
      "import": "./dist/rendering.js"
    },
    "./file-modularity": {
      "types": "./dist/file-modularity.d.ts",
      "import": "./dist/file-modularity.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    },
    "./common": {
      "types": "./dist/common.d.ts",
      "import": "./dist/common.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist .tsbuildinfo",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "xats",
    "types",
    "typescript",
    "education",
    "textbook",
    "schema"
  ],
  "author": "xats.org",
  "license": "CC-BY-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/xats-org/core.git",
    "directory": "packages/types"
  },
  "bugs": {
    "url": "https://github.com/xats-org/core/issues"
  },
  "homepage": "https://xats.org",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@xats-org/vitest-config": "workspace:*",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}