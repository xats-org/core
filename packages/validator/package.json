{
  "name": "@xats/validator",
  "version": "0.4.0",
  "description": "Validation logic for xats documents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist .tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xats/schema": "workspace:*",
    "@xats/types": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@xats/vitest-config": "workspace:*",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "xats",
    "validation",
    "json-schema",
    "ajv",
    "education",
    "textbook"
  ],
  "author": "xats.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xats-org/core.git",
    "directory": "packages/validator"
  },
  "bugs": {
    "url": "https://github.com/xats-org/core/issues"
  },
  "homepage": "https://xats.org",
  "publishConfig": {
    "access": "public"
  }
}