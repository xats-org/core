              {
                "id": "tps-climate-ethics",
                "language": "en",
                "blockType": "https://xats.org/vocabularies/blocks/thinkPairShare",
                "content": {
                  "prompt": {
                    "runs": [
                      {
                        "type": "text",
                        "text": "How should educational institutions balance individual academic freedom with collective responsibility for addressing climate change? Consider both the rights of faculty and students to pursue diverse perspectives, and the institutional obligation to promote scientifically accurate information."
                      }
                    ]
                  },
                  "thinkPhase": {
                    "duration": "PT2M",
                    "instructions": {
                      "runs": [
                        {
                          "type": "text",
                          "text": "Spend 2 minutes considering your personal views on this tension. What factors would you weigh in making institutional policies?"
                        }
                      ]
                    },
                    "scaffolding": [
                      {
                        "type": "guiding-question",
                        "content": {
                          "runs": [
                            {
                              "type": "text", 
                              "text": "What are the benefits and risks of institutional positions on controversial topics?"
                            }
                          ]
                        }
                      }
                    ],
                    "responseFormat": "notes"
                  },
                  "pairPhase": {
                    "duration": "PT4M",
                    "instructions": {
                      "runs": [
                        {
                          "type": "text",
                          "text": "Share your perspectives with your partner. Try to understand viewpoints that differ from your own."
                        }
                      ]
                    },
                    "pairingStrategy": "proximity",
                    "recordResponse": true,
                    "responseFormat": "consensus"
                  },
                  "sharePhase": {
                    "duration": "PT6M",
                    "format": "volunteer",
                    "instructions": {
                      "runs": [
                        {
                          "type": "text",
                          "text": "We'll hear from several pairs about the key tensions they identified."
                        }
                      ]
                    },
                    "captureMethod": "board"
                  },
                  "totalDuration": "PT12M"
                }
              },
              {
                "id": "worked-example-quadratic",
                "language": "en",
                "blockType": "https://xats.org/vocabularies/blocks/workedExample",
                "content": {
                  "concept": "Solving quadratic equations using the quadratic formula",
                  "problem": {
                    "runs": [
                      {
                        "type": "text",
                        "text": "Solve for x: 2x² + 5x - 3 = 0"
                      }
                    ]
                  },
                  "solution": {
                    "steps": [
                      {
                        "number": 1,
                        "action": {
                          "runs": [
                            {
                              "type": "text",
                              "text": "Identify the coefficients a, b, and c from the standard form ax² + bx + c = 0"
                            }
                          ]
                        },
                        "explanation": {
                          "runs": [
                            {
                              "type": "text",
                              "text": "The quadratic formula requires the coefficients from standard form. Here: a = 2, b = 5, c = -3"
                            }
                          ]
                        },
                        "result": "a = 2, b = 5, c = -3",
                        "fadingLevel": 0
                      },
                      {
                        "number": 2,
                        "action": {
                          "runs": [
                            {
                              "type": "text",
                              "text": "Apply the quadratic formula: x = (-b ± √(b² - 4ac)) / (2a)"
                            }
                          ]
                        },
                        "explanation": {
                          "runs": [
                            {
                              "type": "text",
                              "text": "Substitute our values into the quadratic formula to find the solutions."
                            }
                          ]
                        },
                        "result": "x = (-5 ± √(5² - 4(2)(-3))) / (2(2))",
                        "fadingLevel": 1,
                        "hints": [
                          {
                            "level": 1,
                            "hint": {
                              "runs": [
                                {
                                  "type": "text",
                                  "text": "Remember to substitute each coefficient in the correct position."
                                }
                              ]
                            }
                          }
                        ]
                      },
                      {
                        "number": 3,
                        "action": {
                          "runs": [
                            {
                              "type": "text",
                              "text": "Simplify the discriminant (the expression under the square root)"
                            }
                          ]
                        },
                        "explanation": {
                          "runs": [
                            {
                              "type": "text",
                              "text": "Calculate b² - 4ac step by step to avoid arithmetic errors."
                            }
                          ]
                        },
                        "result": "b² - 4ac = 25 - 4(2)(-3) = 25 + 24 = 49",
                        "fadingLevel": 2
                      }
                    ]
                  },
                  "practiceProblems": [
                    {
                      "id": "practice-quad-1",
                      "problem": {
                        "runs": [
                          {
                            "type": "text",
                            "text": "Solve: 3x² - 7x + 2 = 0"
                          }
                        ]
                      },
                      "scaffoldingLevel": 0.6,
                      "providedSteps": [1],
                      "studentCompletes": [2, 3],
                      "expectedSolution": {
                        "finalAnswer": {
                          "runs": [
                            {
                              "type": "text",
                              "text": "x = 2 or x = 1/3"
                            }
                          ]
                        }
                      },
                      "difficulty": "similar"
                    }
                  ],
                  "learningObjectives": [
                    "Apply the quadratic formula correctly",
                    "Identify coefficients in standard form",
                    "Simplify expressions with square roots"
                  ],
                  "cognitiveLoad": "medium",
                  "estimatedTimeMinutes": 20
                }
