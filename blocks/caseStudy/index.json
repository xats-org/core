{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://xats.org/core/blocks/caseStudy",
  "title": "Case Study Block",
  "description": "A comprehensive block for case-based learning scenarios supporting business, law, medicine, and other professional education contexts",
  "type": "object",
  "properties": {
    "blockType": {
      "const": "https://xats.org/core/blocks/caseStudy",
      "description": "The URI identifier for this block type"
    },
    "content": {
      "$ref": "https://xats.org/schemas/0.3.0/xats.json#/definitions/CaseStudyContent",
      "description": "The case study content including scenario, stakeholders, timeline, and analysis questions"
    }
  },
  "required": ["blockType", "content"],
  "examples": [
    {
      "blockType": "https://xats.org/core/blocks/caseStudy",
      "content": {
        "title": {
          "runs": [
            {
              "type": "text",
              "text": "Acme Corporation's Market Entry Strategy"
            }
          ]
        },
        "scenario": {
          "runs": [
            {
              "type": "text",
              "text": "Acme Corporation, a mid-sized technology company, is considering entering the European market with their flagship software product. The company has been successful in North America but faces new challenges including regulatory compliance, cultural differences, and established competitors."
            }
          ]
        },
        "stakeholders": [
          {
            "name": "Sarah Chen",
            "role": "CEO",
            "description": {
              "runs": [
                {
                  "type": "text",
                  "text": "Visionary leader focused on growth and expansion"
                }
              ]
            },
            "motivations": ["Increase market share", "Drive revenue growth"]
          },
          {
            "name": "Marcus Weber",
            "role": "European Market Analyst",
            "description": {
              "runs": [
                {
                  "type": "text",
                  "text": "Local expert with deep knowledge of European business practices"
                }
              ]
            },
            "motivations": ["Ensure regulatory compliance", "Minimize market entry risks"]
          }
        ],
        "questions": [
          {
            "id": "q1",
            "question": {
              "runs": [
                {
                  "type": "text",
                  "text": "What are the key factors Acme should consider when developing their European market entry strategy?"
                }
              ]
            },
            "type": "analysis",
            "cognitiveLevel": "analyze"
          },
          {
            "id": "q2",
            "question": {
              "runs": [
                {
                  "type": "text",
                  "text": "Evaluate the potential risks and benefits of different market entry approaches (direct investment, partnership, acquisition)."
                }
              ]
            },
            "type": "evaluation",
            "cognitiveLevel": "evaluate"
          }
        ],
        "difficultyLevel": "intermediate",
        "estimatedTimeMinutes": 45
      }
    }
  ]
}